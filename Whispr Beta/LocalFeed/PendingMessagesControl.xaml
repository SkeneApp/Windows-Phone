<UserControl x:Class="WhisprBeta.LocalFeed.PendingMessagesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="White">
        <Border x:Name="Border" BorderBrush="#FFD6D4E4" Background="White" BorderThickness="1" Padding="14,6,14,8" CornerRadius="10" HorizontalAlignment="Center" Margin="0,6">
            <TextBlock Text="2 whisprs pending" x:Name="TextBlockMessage" Foreground="#FF5D5D5D" />
        </Border>
    </Grid>
</UserControl>