<UserControl x:Class="WhisprBeta.Common.StatusOverlayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Border Background="#7F000000" >
            <TextBlock x:Name="MessageTextBlock" Text="Message goes here and if it's too long it should wrap." VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontSize="24" Margin="10,0" />
        </Border>
    </Grid>
</UserControl>