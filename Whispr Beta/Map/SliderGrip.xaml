<UserControl x:Class="WhisprBeta.SliderGrip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="50" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="#FFD6D4E4">
        <Border BorderThickness="1,1,1,0" CornerRadius="5" BorderBrush="#FF5D5D5D" Background="#FFD6D4E4" />
        <Border BorderThickness="0,0,0,0" Margin="0, 5, 0, 0" BorderBrush="#FF5D5D5D" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD6D4E4" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border BorderThickness="0,1" BorderBrush="#FF5D5D5D" Width="50" Height="15" />
        <Border BorderThickness="0,1" BorderBrush="#FF5D5D5D" Width="50" Height="1" />
    </Grid>
</UserControl>