<UserControl x:Class="WhisprBeta.SliderGrip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="60" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Border Background="#FF8B8B8B" BorderThickness="0,1,0,0" CornerRadius="5" BorderBrush="Black" />
        <Border Background="#FF8B8B8B" BorderThickness="0,0,0,0" Margin="0, 5, 0, 0"/>
        <Border BorderThickness="0,1" BorderBrush="Black" Width="50" Height="20" />
        <Border BorderThickness="0,1" BorderBrush="Black" Width="50" Height="1" />
    </Grid>
</UserControl>